= content main
  .flexcontainer
    .flag
    .top-nav
      .nav-inner
        = include views/_nav
        .nav-extra-content
          .divider
          {{HTML .PublishingInfo}}
    .toc-index
    .content
      .content-inner-standard
        #title
          h1 {{.Talk.Title}}
        #subtitle
          {{.Talk.Subtitle}}
        section#intro
          {{HTML .Talk.Intro}}
        .divider
        section#slides
          {{range .Talk.Slides}}
            .slide
              h2.block {{.Number}}
              figure
                p
                  {{if eq .Caption ""}}
                    img.no-caption src="/assets/talks/paradise-lost/paradise-lost.{{.Number}}.png"
                  {{else}}
                    img src="/assets/talks/paradise-lost/paradise-lost.{{.Number}}.png"
                  {{end}}
                {{if ne .Caption ""}}
                  figcaption
                    {{HTML .Caption}}
                {{end}}
            .clear
          {{end}}
