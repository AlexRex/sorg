        a href="https://brandur.org/passages/{{.Issue.Slug}}" {{.Issue.Number}}
      {{else}}
        a href="/passages/{{.Issue.Slug}}" {{.Issue.Number}}
      {{end}}
    p#passages
      {{if .InEmail}}
        a href="https://brandur.org/passages" Passages and Glass
      {{else}}
        a href="/passages" Passages and Glass
      {{end}}
